# Metadata: DIR is specified in environment
TARGET = $(DIR)\RUN

# Compiler specs
CC = g++
CFLAGS = -Wall -std=c++2a
PTHREADFLAGS = -pthread

# Sources and headers
# USE "dir /s /b *.cc" to show all *.cc files recursively
SOURCES = 	$(DIR)\*.cpp \
			$(DIR)\models\*.cpp \
			$(DIR)\utils\*.cpp \
			$(DIR)\simulation\*.cpp \
			$(DIR)\octree\*.cpp

# Link objects and create executable
$(TARGET):
	$(CC) $(SOURCES) -o $@ $(CFLAGS) $(PTHREADFLAGS)

clean:
	del $(DIR)\RUN*
